<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="hu.bme.aut.nightshaderemote.ui.ObjectFragment">


    <include layout="@layout/include_object_inputs"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" />

    <include layout="@layout/include_object_buttons"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <include layout="@layout/include_object_displayarea_zoom"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" />

    </LinearLayout>

    <include layout="@layout/include_object_deselect"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" />

</LinearLayout>
